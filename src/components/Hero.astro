---
import Badge from "../components/Badge.astro";
import Github from "../components/icons/Github.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import SocialBalls from "../components/SocialBalls.astro";
---

<section
  id="home"
  class="relative flex flex-col lg:flex-row items-center lg:items-start justify-between lg:space-x-8 py-44 w-full mx-auto lg:w-[960px]"
>
  <section class="lg:w-1/2">
    <h1
      id="hero-title"
      class="text-Duron text-4xl sm:text-6xl font-bold leading-tight pb-2"
    >
      <span class="block">Hello,</span>
      <span class="block">I'm Alexis Ramirez</span>
    </h1>
    <h2
      id="hero-subtitle"
      class="text-Duron text-2xl flex flex-row gap-x-3 pb-4 opacity-90"
    >
      FullStack Developer
      <a
        href="https://www.linkedin.com/in/alexis-jose-ramirez-taveras-26388a276/"
        target="_blank"
      >
        <Badge>available for work</Badge>
      </a>
    </h2>
    <div id="button-sec-1" class="flex gap-3">
      <a type="button" href="mailto:alexisramirez0122@hotmail.com" class="no-underline hover:underline">Hire me</a
      >
      <a type="button" href="https://drive.google.com/file/d/1KbhqT5zG9dtv5OQDrPHVBMMDp5x29tdS/view?usp=sharing" class="no-underline hover:underline"
        >Download CV</a
      >
    </div>
    <nav id="button-sec-2" class="flex gap-x-3 pt-4">
      <SocialBalls href="https://www.linkedin.com/in/alexis-jose-ramirez-taveras-26388a276/">
        <Linkedin class="w-6 h-6" />
        LinkedIn
      </SocialBalls>
      <SocialBalls href="https://github.com/Alexis0122">
        <Github class="w-6 h-6" />
        GitHub
      </SocialBalls>
    </nav>
  </section>
  <div
    id="hero-blob"
    class="hidden lg:block absolute right-10 top-32 w-96 h-96 bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 opacity-30 rounded-full blur-2xl pointer-events-none z-0"
  >
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/all";

  gsap.registerPlugin(ScrollTrigger);

  const tl = gsap.timeline({
    scrollTrigger: {
      scrub: 1,
    },
  });

  gsap.to("#hero-blob", {
    y: 30,
    x: 20,
    rotation: 5,
    duration: 0.90,
    ease: "sine.inOut",
    repeat: -1,
    yoyo: true,
  });

  gsap.from("#hero-title", {
    y: 40,
    opacity: 0,
    duration: 2,
    ease: "power2.out",
  });

  gsap.from("#hero-subtitle", {
    y: 30,
    opacity: 0,
    duration: 2,
    delay: 0.3,
    ease: "power2.out",
  });

  gsap.from("#button-sec-1", {
    y: 20,
    opacity: 0,
    duration: 2,
    delay: 0.5,
    ease: "power2.out",
  });

  gsap.from("#button-sec-2", {
    y: 10,
    opacity: 0,
    duration: 2,
    delay: 0.7,
    ease: "power2.out",
  });
</script>
